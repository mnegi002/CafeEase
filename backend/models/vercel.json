{
    "version": 2,
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "http://backend/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      },
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ]
  }
  